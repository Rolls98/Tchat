<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <%- include("partials/style.ejs") %>
  </head>

  <body>
    <div class="connex">
      <form id="connex" method="post" action="/connexion">
        <div class="form-group">
          <label for="login">Login</label>
          <input
            type="text"
            class="form-control"
            id="login"
            name="login"
            placeholder="EX : Nan2020"
          />
        </div>

        <div class="form-group">
          <label for="nvpsd">Mot de passe</label><br />
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
            placeholder="**************"
          />
        </div>
        <div class="form-group">
          <input
            type="submit"
            class="btn btn-lg btn-primary w-100"
            value="Connexion"
          />
        </div>
      </form>
    </div>
    <%- include("partials/bootstrap.ejs") %>
  </body>
</html>
